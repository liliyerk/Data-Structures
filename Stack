class Node:
    def __init__(self, data, next=None):
        self.data = data
        self.next = next

class Stack:
    def __init__(self):
        self.top = None
        self.size = 0

    def push(self, obj):
        new_node = Node(obj)
        if self.top == None:
            self.top = new_node
            self.size += 1
        else:
            new_node.next = self.top
            self.top = new_node
            self.size += 1

    def pop(self):
        if self.size == 0:
            return
        elif self.size == 1:
            self.top = None
            self.size -= 1
        else:
            tmp = self.top
            self.top = self.top.next
            tmp.next = None
            self.size -= 1

    def Top(self):
        if self.top != None:
            return self.top.data
        else:
            print("The stack is empty.")

    def isEmpty(self):
        if self.size == 0:
            return True
        return False

    def empty(self):
        self.top = None
        self.size = 0
        
def main():
    stack = Stack()
    stack.push(5)
    stack.push(6)
    stack.push(8)
    stack.print_stack()
    stack.pop()
    stack.print_stack()
    print(stack.Top())
    print(stack.isEmpty())
    stack.empty()
    print(stack.print_stack())
    
main()
